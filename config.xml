<?xml version='1.0' encoding='utf-8'?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="io.cordova.CordovaApiDemo" version="1.0.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>CordovaApiDemo</name>
  <description>
    A blank project that uses Apache Cordova to help you build an app that targets multiple mobile platforms: Android, iOS, Windows, and Windows Phone.
  </description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">
    Apache Cordova Team
  </author>
  <content src="index.html" />
  <access origin="*" />
  <access origin="localhost" />
  <preference name="SplashScreen" value="screen" />
  <preference name="Fullscreen" value="true" />
  <vs:features>
    <vs:feature>org.apache.cordova.camera</vs:feature>
    <vs:feature>org.apache.cordova.network-information</vs:feature>
    <vs:feature>org.apache.cordova.contacts</vs:feature>
    <vs:feature>org.apache.cordova.geolocation</vs:feature>
    <vs:feature>org.apache.cordova.inappbrowser</vs:feature>
    <vs:feature>org.apache.cordova.device</vs:feature>
    <vs:feature>org.apache.cordova.file</vs:feature>
    <vs:feature>org.apache.cordova.console</vs:feature>
    <vs:feature>org.apache.cordova.dialogs</vs:feature>
    <vs:feature>org.apache.cordova.device-motion</vs:feature>
  </vs:features>
  <vs:platformSpecificValues>
    <vs:platformSpecificWidget platformName="windows8" />
  </vs:platformSpecificValues>
</widget>
